{
  "name": "pacemaker-video",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky",
    "validate-branch-name": "npx validate-branch-name",
    "typecheck": "tsc --noEmit --module esnext --incremental",
    "lint-staged": "npx lint-staged",
    "precommit-build": "npm run build",
    "precommit-tasks": "npm run precommit-build && npm run validate-branch-name && npm run typecheck && npm run lint-staged"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.11.2",
    "@prisma/client": "^6.3.1",
    "@wistia/wistia-player-react": "^0.0.96",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.475.0",
    "next": "15.1.6",
    "next-auth": "^4.24.5",
    "react": "^18",
    "react-dom": "^18",
    "svix": "^1.45.1",
    "tailwind-merge": "^2.6.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@next/eslint-plugin-next": "^15.1.7",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^9.20.1",
    "eslint-config-next": "^15.1.6",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "postcss": "^8",
    "prettier": "^3.5.0",
    "prisma": "^6.3.1",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "validate-branch-name": "^1.3.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write .",
      "eslint --fix ."
    ],
    "*.ts": [
      "tsc-files --noEmit",
      "prettier --write .",
      "eslint --fix ."
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write ."
    ]
  },
  "validate-branch-name": {
    "pattern": "^(main){1}$|^(chore|hotfix)\\/([\\/\\w\\-\\d]+)$|^(\\w+-\\d+)\\/([\\w\\-\\d]+)$",
    "errorMsg": "Please follow standard branch name, rename branch using: git branch -m <oldname> <newname>"
  }
}
